<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".config.routes.route">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_route"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_route"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="20dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="50dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextDstRoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dst. Address"
                android:maxLines="1"
                android:textSize="16sp"
                android:autofillHints=""
                android:inputType="number"
                android:digits="@string/no_space"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextGatewayRt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gateway"
                android:maxLines="1"
                android:textSize="16sp"
                android:autofillHints=""
                android:inputType="number"
                android:digits="@string/no_space"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextChkGate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Check Gateway"
                android:text="ping"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextTypeRt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type (unicast)"
                android:text="unicast"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                android:inputType="" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextDistanceRt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Distance"
                android:text="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp"
                android:inputType="number" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_setRoute"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@color/colorButton"
            android:fontFamily="sans-serif"
            android:text="@string/set_ip"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/btn_cancelRt"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/colorButton2"
            android:fontFamily="sans-serif"
            android:text="@string/cancel"
            android:textColor="@color/colorText" />

    </LinearLayout>


</RelativeLayout>